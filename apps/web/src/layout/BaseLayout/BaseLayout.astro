---
// ğŸ”© Base
import { ViewTransitions } from "astro:transitions";
import { fade } from "astro:transitions";

// ğŸš€ SEO
// import SpeedInsights from "@vercel/speed-insights/astro";
import Head from "../Head.astro";

// ğŸ§± Components
import Header from "./Header/Header.astro";
import Footer from "./Footer/Footer.astro";

// ğŸ–Šï¸ Fonts
import "@fontsource/open-sans/300.css";
import "@fontsource/open-sans/400.css";
import "@fontsource/open-sans/700.css";
import "@fontsource/bebas-neue";
import "@fontsource/bakbak-one";
import "@fontsource/montserrat/400.css";
import "@fontsource/montserrat/600.css";
import "@fontsource/roboto";

// ğŸ¨ Styles
import "@web/styles/reset.css";
import "@web/styles/global.css";

// ğŸ§° Config
const DEFAULT_IMAGE = "/img/default.jpg";
const DEFAULT_DESCRIPTION = "Frustration Magazine, mÃ©dia indÃ©pendant et offensif qui relate la guerre des classes.";

const { title, description = DEFAULT_DESCRIPTION, author } = Astro.props;
const featuredImage = Astro.props?.featuredImage?.node;
const ogImage = featuredImage?.sourceUrl ?? DEFAULT_IMAGE;

let width, height, mimeType;
if (featuredImage?.mediaDetails) {
	width = featuredImage?.mediaDetails?.width;
	height = featuredImage?.mediaDetails?.height;
	mimeType = featuredImage?.mimeType;
}
---

<!doctype html>
<html
	lang="fr"
	class="bg-black">
	<Head
		title={title}
		author={author}
		description={description}
		ogImageUrl={ogImage}
		{...width ? { width } : null}
		{...height ? { height } : null}
		{...mimeType ? { mimeType } : null}
	/>
	<title>Frustration Magazine - {title}</title>
	<ViewTransitions />
	<body class="min-h-screen bg-white flex flex-col">
		<Header transition:persist />
		<main class="flex-grow flex flex-col">
			<slot transition:animate={fade({ duration: "0.4s" })} />
		</main>
		<Footer transition:persist />
		<!-- <SpeedInsights /> -->
	</body>
</html>
